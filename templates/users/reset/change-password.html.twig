{% extends 'base.html.twig' %}


{% block section %}

    {% for flash_message in app.session.flashbag.get('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ flash_message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {{ form_start(usuarioResetPasswordForm) }}
    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            {{ form_widget(usuarioResetPasswordForm.password,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(usuarioResetPasswordForm.password) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">New Password</label>
        <div class="col-sm-10">
            {{ form_widget(usuarioResetPasswordForm.newPassword,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="mt-5">
        <button class="btn btn-primary">Enviar</button>
    </div>
    {{ form_end(usuarioResetPasswordForm) }}
{% endblock %}